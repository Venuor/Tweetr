<div class="ui card">
    <div class="image container"
        {{#if user.image}}
         style="background: url('/img/{{user.image}}'); background-size: cover;"
        {{/if}}>
        {{#unless user.image}}
            <img class="image content" src="/images/placeholder.png" />
        {{/unless}}
    </div>
    <div class="content">
        <span class="header">{{user.displayname}}</span>
        <div class="meta">
            <div class="ui list">
                <div class="item">
                    <i class="at icon"></i>
                    <div class="content">
                        {{user.username}}
                    </div>
                </div>
                <div class="item">
                    <i class="calendar icon"></i>
                    <div class="content" title="{{user.joined}}">
                        Member since {{formatRelative user.joined}}
                    </div>
                </div>
                <div class="item">
                    <i class="mail icon"></i>
                    <div class="content">
                        {{user.email}}
                    </div>
                </div>
            </div>
        </div>
        <div class="description">
            {{user.description}}
        </div>
    </div>
    {{#if subs}}
        <div class="extra content">
            {{#if followable}}
                {{#if isFollowing}}
                    <form action="/user/{{user.username}}/unsubscribe" method="post">
                        <div class="ui labeled button">
                            <button class="ui basic orange button">
                                <i class="hide icon"></i> Unsubscribe
                            </button>
                            <a class="ui basic orange left pointing label">{{subs}}</a>
                        </div>
                    </form>
                {{else}}
                    <form action="/user/{{user.username}}/subscribe" method="post">
                        <div class="ui labeled button">
                            <button class="ui orange button">
                                <i class="unhide icon"></i> Subscribe
                            </button>
                            <a class="ui basic orange left pointing label">{{subs}}</a>
                        </div>
                    </form>
                {{/if}}
            {{else}}
                <i class="user icon"></i>
                {{subs}} Followers
            {{/if}}
        </div>
    {{/if}}
</div>
